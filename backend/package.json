{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text jest",
    "test:unit": "cross-env NODE_ENV=test jest --selectProjects unit",
    "test:mock": "cross-env NODE_ENV=test jest --selectProjects mock-integration",
    "test:integration": "cross-env NODE_ENV=test jest --selectProjects integration --runInBand",
    "test:docker": "cross-env NODE_ENV=test jest --selectProjects docker-integration --runInBand",
    "test:all": "npm run test:unit && npm run test:mock",
    "test:all-with-docker": "npm run test:unit && npm run test:mock && npm run test:docker",
    "test:integration:setup": "docker compose -f docker-compose.test.yml up -d --remove-orphans",
    "test:integration:full": "npm run test:integration:setup && sleep 25 && npm run test:integration && npm run test:integration:teardown",
    "test:docker:full": "npm run test:integration:setup && sleep 30 && npm run test:docker && npm run test:integration:teardown",
    "test:integration:teardown": "docker compose -f docker-compose.test.yml down -v",
    "test:watch": "cross-env NODE_ENV=test jest --selectProjects unit --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --selectProjects unit mock-integration --coverage",
    "test:security": "cross-env NODE_ENV=test jest --testPathPatterns=security",
    "test:performance": "cross-env NODE_ENV=test jest --testPathPatterns=performance",
    "test:fast": "npm run test:unit && npm run test:mock",
    "test:db": "npm run test:integration:full",
    "test:docker:setup": "docker compose -f docker-compose.test.yml up -d --remove-orphans && echo 'Waiting for services to be ready...' && sleep 30",
    "test:docker:teardown": "docker compose -f docker-compose.test.yml down -v",
    "test:docker:status": "docker compose -f docker-compose.test.yml ps",
    "test:docker:logs": "docker compose -f docker-compose.test.yml logs",
    "docker:clean": "docker compose -f docker-compose.test.yml down -v --remove-orphans",
    "test:allure": "jest --runInBand && allure generate allure-results --clean -o allure-report && allure open",
    "test:allure:generate": "npm run allure:env && jest --runInBand && allure generate allure-results --clean -o allure-report",
    "test:allure:generate:unit": "npm run test:unit && allure generate allure-results --clean -o allure-report",
    "test:allure:open": "allure open",
    "test:allure:clean": "rm -rf allure-results/* && rm -rf allure-report/*",
    "clean": "node scripts/cleanup.js",
    "clean:deep": "node scripts/cleanup.js --deep",
    "clean:all": "npm run clean && npm run test:allure:clean",
    "check:sizes": "node scripts/check-file-sizes.js",
    "pre-commit": "node scripts/pre-commit.js",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "dev": "nodemon src/index.js",
    "test:full": "npm run test:unit && npm run test:mock && npm run test:integration:full",
    "allure:env": "node scripts/generate-allure-env.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.0",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jest-extended": "^6.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.5",
    "mongoose": "^8.16.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.34.1",
    "jest": "^30.0.3",
    "jest-allure2-reporter": "^2.2.6",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "supertest": "^7.1.1",
    "web3": "^4.16.0"
  }
}
