# Docker Test Environment Configuration
NODE_ENV=test

# PostgreSQL Test Configuration
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=test_db
POSTGRES_URI=postgresql://test_user:test_password@localhost:5433/test_db

# MongoDB Test Configuration
MONGO_URI=mongodb://localhost:27018/test_db
MONGODB_URI=mongodb://localhost:27018/test_db

# Redis Test Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=

# Server Configuration
PORT=5001

# MinIO Test Configuration
MINIO_BUCKET=test-bucket
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_AVATARS_BUCKET=user-avatars
MINIO_DOCUMENTS_BUCKET=user-documents
MINIO_NFT_BUCKET=nft-assets
MINIO_TEMP_BUCKET=temp-uploads

# Email Test Configuration
SMTP_HOST=localhost
SMTP_PORT=1026
SMTP_USER=
SMTP_PASS=
MAIL_FROM=test@dapp.local
TEST_EMAIL_TO=test@example.com

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-docker-testing-only
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=test-session-secret-key
SESSION_TIMEOUT_HOURS=24

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=error 